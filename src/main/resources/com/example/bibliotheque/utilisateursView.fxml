                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="513.0" prefWidth="1031.0" styleClass="background">
                    <children>
                        <TableView fx:id="tableViewUtilisateurs" layoutY="-3.0" onContextMenuRequested="#onUtilisateurClick" prefHeight="415.0" prefWidth="1143.0">
                            <columns>
                            </columns>
                        </TableView>
                    </children></AnchorPane>
            </items>
        </SplitPane>
    </children>
