<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="462.0" prefWidth="1145.0" spacing="20.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bibliotheque.UtilisateursController">
    <children>
        <MenuBar prefHeight="33.0" prefWidth="1033.0">
         <menus>
            <Menu mnemonicParsing="false" text="Rechercher">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onRechercherClick" text="Rechercher un utilisateur" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Liste Rouge">
              <items>
                <MenuItem mnemonicParsing="false" text="Ajouter un utilisateur sur liste rouge" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Ajouter et modifier">
